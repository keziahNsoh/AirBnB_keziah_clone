/*Improve color contrast */
body {
  color: #333; /* Dark text color */
  background-color: #fff; /* Light background color */
}

/* Header tags */
h1, h2, h3, h4, h5, h6 {
  font-weight: bold;
}

/* Alternative text for images */
img {
  max-width: 100%;
  height: auto;
}

/* Focus styles */
button,
a {
  outline: none;
}

button:focus,
a:focus {
  /* Add your focus styles here, for example: */
  border: 2px solid #007bff; /* Blue border */
}
